#!/usr/bin/env perl

use strict;
use warnings;

use File::Basename 'dirname';
use File::Spec;
use Cwd;
BEGIN {
    $ENV{MOJO_HOME} = Cwd::realpath( File::Spec->rel2abs(dirname(__FILE__).'/../../'));
}

use lib ( "$ENV{MOJO_HOME}/perl/lib" );

# Check if Mojo is installed
eval 'use Mojolicious::Commands';
die <<EOF if $@;
It looks like you don't have the Mojolicious Framework installed.
Please visit http://mojolicio.us for detailed installation instructions.

EOF

# Start the command system
Mojolicious::Commands->start;

__END__

=head1 NAME

mojo - The Mojolicious Command System

=head1 SYNOPSIS

    mojo help

=head1 DESCRIPTION

List and run L<Mojolicious> commands as described in
L<Mojolicious::Commands>.

=head1 SEE ALSO

L<Mojolicious>, L<Mojolicious::Guides>, L<http://mojolicio.us>.

=cut
